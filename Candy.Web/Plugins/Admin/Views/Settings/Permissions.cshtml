@model PermissionsViewModels
@{
    ViewBag.Title = Html.Lang("权限");
}
<div class="panel">
    <div class="panel-header">
        <h3>@Html.Lang("权限设置")</h3>
    </div>
    <div class="panel-body">
        <div class="tools">
            <div class="btn-group">
                <select name="user-role" id="permissioninrole">
                    @foreach(var role in Model.Roles)
                    {
                        <option value="@role.Id">@role.RoleName</option>
                    }
                </select>
            </div>
        </div>
        <table class="cbtable" cellspacing="0">
            <thead>
                <tr>
                    <th></th>
                    @foreach (var permission in Model.Permissions)
                    {
                        <th>@permission.Name</th> 
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        @foreach (var permission in Model.Permissions)
                        {
                            var isChecked = "";
                            <td>
                                <span class="permissioncheckbox">
                                    <input data-permisssion="@permission.Id" data-category="@category.Id" data-role="" type="checkbox" id="@permission.Id-@category.Id" @isChecked/>
                                </span>
                            </td>
                        }
                    </tr> 
                }
            </tbody>
        </table>
    </div>

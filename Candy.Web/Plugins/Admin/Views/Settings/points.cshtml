@model SettingsViewModels
@{
    ViewBag.Title = Html.Lang("积分");
}
<div class="panel">
    <div class="panel-header">
        <h3>@Html.Lang("积分设置")</h3>
    </div>
    <div class="panel-body">
        <form action="@Url.Content("~/admin/settings/update")" method="post" class="form-box">
            <div class="form-group">
                <label for="@AppConstants.PointsAddedPerTopic">@Html.Lang("发布主题")</label>
                <input type="text" name="@AppConstants.PointsAddedPerTopic" value="@Model.Settings[AppConstants.PointsAddedPerTopic].Value" id="@AppConstants.PointsAddedPerTopic" class="text" placeholder="@Html.Lang("发布主题添加的积分")" />
            </div>
            <div class="form-group">
                <label for="@AppConstants.PointsAddedPerPost">@Html.Lang("添加回复")</label>
                <input type="text" name="@AppConstants.PointsAddedPerPost" value="@Model.Settings[AppConstants.PointsAddedPerPost].Value" id="@AppConstants.PointsAddedPerPost" class="text" placeholder="@Html.Lang("发表回复添加的积分")" />
            </div>
            <div class="form-group">
                <div class="sm-line">
                    <button type="submit" name="submit" class="btn btn-danger">@Html.Lang("保存设置")</button>
                </div>
            </div>
        </form>
    </div>
</div>
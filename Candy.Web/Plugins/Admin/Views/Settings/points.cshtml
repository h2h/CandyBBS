@model SettingsViewModels
@{
    ViewBag.Title = Html.Lang("积分");
}
<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>@Html.Lang("积分设置")</h4>
            </div>
            <div class="grid-body no-border">
                <form action="@Url.Absolute("~/admin/settings/update")" method="post" class="form-box">
                    <div class="form-group">
                        <label class="form-label" for="@AppConstants.PointsAddedPerTopic">@Html.Lang("发布主题")</label>
                        <div class="controller">
                            <input type="text" name="@AppConstants.PointsAddedPerTopic" value="@Model.Settings[AppConstants.PointsAddedPerTopic].Value" id="@AppConstants.PointsAddedPerTopic" class="form-control" placeholder="@Html.Lang("发布主题添加的积分")" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="@AppConstants.PointsAddedPerPost">@Html.Lang("添加回复")</label>
                        <div class="controller">
                            <input type="text" name="@AppConstants.PointsAddedPerPost" value="@Model.Settings[AppConstants.PointsAddedPerPost].Value" id="@AppConstants.PointsAddedPerPost" class="form-control" placeholder="@Html.Lang("发表回复添加的积分")" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="pull-left">
                            <button type="submit" name="submit" class="btn btn-success btn-cons">@Html.Lang("保存设置")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
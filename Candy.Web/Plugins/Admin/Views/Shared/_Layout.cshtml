@using Candy.Domain.Interfaces.Services
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Candy</title>
    <meta name="description" property="og:description" itemprop="description" content="" />
    <meta name="keywords" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:url" content="" />
    <link rel="alternate" type="application/rss+xml" title="RSS 2.0 Feed" href="" />
    <link href="@Url.Content(Html.AdminPath("css/font.css"))" rel="stylesheet" />
    <link href="@Url.Content(Html.AdminPath("css/style.css"))" rel="stylesheet" />
    <script src="@Url.Content(Html.AdminPath("js/jquery.min.js"))"></script>
    <script src="@Url.Content(Html.AdminPath("js/candy.js"))"></script>
    <script type="text/javascript">
        var app_base = "@Url.Content("~/")";
    </script>
</head>
<body>
    <div id="wrapper">
        <header id="header">
            <div class="grid-1200">
                <div class="logo col-1-4">
                    <a href="">
                        <img src="@Url.Content(Html.Path("img/logo.jpg"))" title="@Html.Lang("Candy BBS")" />
                    </a>
                </div>
                <nav class="navbar col-1-2">
                    <ul class="nav">
                        <li>
                            <a href="">@Html.Lang("首页")</a>
                        </li>
                        <li class="active">
                            <a href="@Url.Content("~/forum")">@Html.Lang("版块")</a>
                        </li>
                    </ul>
                </nav>
                <nav class="navbar col-1-4" id="right-nav">
                    <ul class="nav">
                        <li class="header-search">
                            <form action="" method="get" class="header-search-form">
                                <input type="text" id="search-text" name="search" value="" placeholder="@Html.Lang("搜索")" />
                                <button type="submit" id="search-button"><i class="fa fa-search"></i></button>
                            </form>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            var currentUser = DependencyResolver.Current.GetService<IUserService>().GetUser(User.Identity.Name);
                            var avatar = string.Empty;
                            if (currentUser.Avatar.IsNullEmpty())
                            {
                                avatar = StringUtils.GetGravatarImage(currentUser.Email, 48);
                                if (avatar.IsNullEmpty())
                                {
                                    avatar = DependencyResolver.Current.GetService<ISettingsService>().Get(AppConstants.DefaultUserAvatar).Value;
                                }
                            }
                            else
                            {
                                avatar = Url.Content(currentUser.Avatar);
                            }
                            <li class="header-user">
                                <a href="@Url.Content(currentUser.NiceUrl)">
                                    <img src="@avatar" width="48" alt="@currentUser.UserName" title="@currentUser.UserName" />
                                </a>
                                <ul class="sub-nav">
                                    <li>
                                        <a href="@Url.Content(currentUser.NiceUrl)">@Html.Lang("个人主页")</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Content("~/Settings/")">@Html.Lang("资料设置")</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Content("~/logout/")">@Html.Lang("退出")</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </header>
        <div id="content" class="container">
            <div id="main" class="grid grid-left-300">
                <div id="sidebar" class="col-3-300">
                    <div class="panel">
                        <div class="panel-body nopadding">
                            <ul class="admin-menu">
                                <li class="title">
                                    <span>@Html.Lang("设置")</span>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/settings/")">@Html.Lang("基本设置")</a>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/theme/")">@Html.Lang("主题")</a>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/email/")">@Html.Lang("邮箱")</a>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/points/")">@Html.Lang("积分")</a>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/Permissions/")">@Html.Lang("权限")</a>
                                </li>
                                <li class="title">
                                    <span>@Html.Lang("版块")</span>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/category/index/")">@Html.Lang("所有版块")</a>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/category/new/")">@Html.Lang("添加版块")</a>
                                </li>
                                <li class="title">
                                    <span>@Html.Lang("主题")</span>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("所有主题")</a>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("主题标签")</a>
                                </li>
                                <li class="title">
                                    <span>@Html.Lang("用户")</span>
                                </li>
                                <li>
                                    <a href="@Url.Content("~/admin/user/index")">@Html.Lang("用户管理")</a>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("用户组")</a>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("添加用户组")</a>
                                </li>
                                <li class="title">
                                    <span>@Html.Lang("工具")</span>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("导入导出")</a>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("批量操作")</a>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("邮箱黑名单")</a>
                                </li>
                                <li>
                                    <a href="">@Html.Lang("日志")</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div id="section" class="col-4-300">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer id="footer">
            <div class="grid-1200">
                <div class="col-1-2">
                    <p>All Right Reserved by <a href="http://www.icoding.me" target="_blank">iCoding.Me</a></p>
                </div>
                <div class="col-1-2">
                    <nav class="navbar">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="">@Html.Lang("首页", "首页")</a>
                            </li>
                            <li>
                                <a href="#">@Html.Lang("关于", "关于")</a>
                            </li>
                            <li>
                                <a href="#">@Html.Lang("服务", "服务")</a>
                            </li>
                            <li>
                                <a href="#">@Html.Lang("帮助", "帮助")</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
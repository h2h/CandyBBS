@model ViewCategoryViewModel
@{
    ViewBag.Title = Model.Category.Name;
}
<div id="main" class="grid grid-right-300">
    <div class="col-1-300">
        <div class="panel">
            <div class="panel-body">
                @Model.Category.Name
            </div>
        </div>
        <div class="panel">
            <div class="panel-body nopadding">
                <div class="cat-head-bar">
                    <div class="filter">
                        <span>@Html.Lang("筛选")</span>
                    </div>
                    @if(User.Identity.IsAuthenticated){
                    <a id="new-topic" href="@Url.Content("~/topic/new/?categoryId="+@Model.Category.Id)">@Html.Lang("发帖")</a>
                    }
                </div>
                <div class="topic-list">
                    @if (Model.Topics.TotalCount > 0)
                    {
                    <ul>
                        @foreach(var topic in Model.Topics)
                        {
                            <li>
                                <div class="user-avatar">
                                    <a href="@Url.Content(topic.User.NiceUrl)">
                                        <img src="@Url.Content(topic.User.GetAvatar)" class="avatar" />
                                    </a>
                                </div>
                                <div class="topic-info">
                                    <h2 class="topic-title">
                                        <a href="@Url.Content(topic.NiceUrl)">@topic.Name</a>
                                    </h2>
                                    <div class="topic-meta">
                                        <strong>
                                            <a href="@Url.Content(topic.User.NiceUrl)">@topic.User.Slug</a>
                                        </strong>
                                        &nbsp;•&nbsp;@topic.Posts.LastOrDefault().DateCreated&nbsp;•&nbsp;最后回复来自
                                        <strong>
                                            <a href="@Url.Content("~/user/info/1")">Admin</a>
                                        </strong>
                                    </div>
                                    <div class="topic-count">
                                        <a class="tcount" title="回复">52</a>
                                        <span class="ncount" title="浏览">78</span>
                                    </div>
                                </div>
                            </li>
                        }
                        </ul>
                        if (Model.Topics.TotalPages > 1)
                        {
                             
                        }
                    }
                    else
                    {
                        <p>@Html.Lang("还没有帖子")</p> 
                    }
                </div>
            </div>
        </div>
    </div>
    <div id="sidebar" class="col-2-300">
        @Html.Action("Index","Widget")
    </div>
</div>d
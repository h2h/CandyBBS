@{
    ViewBag.Title = Html.Lang("注册");
    Layout = Html.Path("Views/Shared/_FullWidthLayout.cshtml");
}
<div class="base-settings">
    <div class="forum-panel">
        <div class="page-title">
            <h2>@Html.Lang("注册")</h2>
        </div>
        <div class="register">
            <form method="post" action="@Url.Absolute("~/register/")" id="register-form" class="form-horizontal" style="padding:0px;">
                <div class="form-group">
                    <label for="username" class="control-label">
                        @Html.Lang("用户名")
                    </label>
                    <input type="text" name="username" id="username" value="" class="form-control" placeholder="@Html.Lang("请输入用户名")" />
                </div>
                <div class="form-group">
                    <label for="email" class="control-label">
                        @Html.Lang("邮箱")
                    </label>
                    <input type="text" name="email" id="email" value="" class="form-control" placeholder="@Html.Lang("请输入邮箱")" />
                </div>
                <div class="form-group">
                    <label for="password" class="control-label">
                        @Html.Lang("密码")
                    </label>
                    <input type="password" name="password" id="password" value="" class="form-control" placeholder="@Html.Lang("请输入密码")" autocomplete="off" />
                </div>
                <div class="form-group">
                    <div class="sm-line">
                        <button type="submit" class="btn btn-danger">注册</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="@Url.Absolute(Html.Path("js/formValidator/formValidator.min.js"))"></script>
    <script type="text/javascript">
        $(function () {
            $.formValidator.initConfig({ formID: "register-form" });

            $("input[name=username]").formValidator({
                empty: false,
                onFocus: "@Html.Lang("请输入用户名，长度不能小于3个字符")"
            }).inputValidator({
                min: 1,
                empty: {
                    leftEmpty: false,
                    rightEmpty: false,
                    emptyError: "@Html.Lang("用户名两边不能有空格")"
                },
                onError: "@Html.Lang("用户名不能为空")"
            });

            $("input[name=email]").formValidator({
                empty: false,
                onFocus: "@Html.Lang("请输入邮箱，示例:xxxxx@gmail.com")"
            }).inputValidator({
                min: 1,
                empty: {
                    leftEmpty: false,
                    rightEmpty: false,
                    emptyError: "@Html.Lang("邮箱两边不能有空格")"
                },
                onError: "@Html.Lang("邮箱不能为空")"
            });

            $("input[name=password]").formValidator({
                empty: false,
                onFocus: "@Html.Lang("请输入密码，长度不能小于8个字符")"
            }).inputValidator({
                min: 1,
                empty: {
                    leftEmpty: false,
                    rightEmpty: false,
                    emptyError: "@Html.Lang("密码两边不能有空格")"
                },
                onError: "@Html.Lang("密码不能为空")"
            });

            $("#register-form").on("submit", function () {
                return $.formValidator.pageIsValid();
            });
        });
    </script>
}